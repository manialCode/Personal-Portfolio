---
interface Props {
  href: string | URL | null | undefined;
}
const { href } = Astro.props;
---

<li>
  <a
    href={href}
    target="_blank"
    rel="noopener noreferrer"
    class="rounded-full border border-white/5 flex
    bg-gradient-to-r from-white/10 to-transparent
     justify-center items-center gap-x-2 px-4 py-2 bg-white/5 hover:scale-110 hover:to-white/10 transition duration-300 text-xs"
  >
    <slot />
  </a>
</li>
