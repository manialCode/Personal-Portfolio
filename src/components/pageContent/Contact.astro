---
import SubmitButton from "../form/SubmitButton.astro";
---

<h3 class="font-bold text-xl text-cyan-400/90">Comun√≠cate conmigo</h3>
<form action="contact-with-me" id="contact" class="grid">
  <label class="mt-6 mb-1" for="name">Nombre</label>
  <input
    type="text"
    id="name"
    class="rounded-xl px-4 py-2 border-cyan-500 shadow-md border-solid border focus:shadow-cyan-400"
    placeholder="Ingresa tu nombre"
  />

  <label class="mt-6 mb-1" for="email">Email</label>
  <input
    type="email"
    id="email"
    class="rounded-xl px-4 py-2 border-cyan-500 shadow-md border-solid border focus:shadow-cyan-400"
    placeholder="Ingresa tu email"
  />
  <label class="mt-6 mb-1" for="msg">Mensaje</label>
  <textarea
    autocomplete="off"
    form="get-in-touch-form"
    placeholder="Ingresa tu mensaje"
    rows="9"
    cols="9"
    class="border-cyan-500 shadow-md border-solid border resize-none p-3 focus:shadow-cyan-400 rounded-xl"
  ></textarea>
  <SubmitButton />
</form>
