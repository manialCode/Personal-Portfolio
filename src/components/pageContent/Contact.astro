---
import SubmitButton from "../form/SubmitButton.astro";
---

<h3 class="font-bold text-2 xl mb-3 text-cyan-400/90">Comun√≠cate conmigo</h3>
<form action="contact-with-me" id="contact" class="grid font-light">
  <label class="mb-1 font-normal" for="email">Email</label>
  <input
    type="email"
    required
    id="email"
    class="rounded-xl shadow-white/10 px-4 py-2 shadow-lg transition duration-300 focus:outline-none focus:shadow-cyan-400/30"
    placeholder="Ingresa tu email"
    autocomplete="off"
  />
  <label class="mt-6 mb-1 font-normal" for="name">Asunto</label>
  <input
    type="text"
    id="name"
    required
    class="rounded-xl shadow-white/10 px-4 py-2 shadow-lg transition duration-300 focus:outline-none focus:shadow-cyan-400/30"
    placeholder="Ingresa tu nombre"
    autocomplete="off"
  />

  <label class="mt-6 mb-1 font-normal" for="msg">Mensaje</label>
  <textarea
    required
    autocomplete="off"
    form="get-in-touch-form"
    placeholder="Ingresa tu mensaje"
    rows="4"
    cols="10"
    class="shadow-lg resize-none p-3 focus:outline-none transition duration-300 focus:shadow-cyan-400/30 rounded-xl shadow-white/10"
  ></textarea>
  <div>
    <SubmitButton />
  </div>
</form>
