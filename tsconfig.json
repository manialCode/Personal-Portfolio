{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist", "src/components/form"],

  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/components": ["src/components/*"],
      "@/main": ["src/components/pageContent/*"],
      "@/common": ["src/components/common/*"],
      "@/public": ["./public/*"]
    }
  }
}
